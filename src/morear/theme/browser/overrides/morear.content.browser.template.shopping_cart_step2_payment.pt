<!-- list -->
<div id="cart-list-02">
<ul>
<li><table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody><tr>
    <th width="70" valign="top">配送方式：</th>
    <td><p>
      <input type="checkbox" name="on-store" id="on-store" class="shipping-method">
      <label for="checkbox2"></label>
      門市取貨
      <label for="select"></label>
      <select name="selected-store" id="selected-store" style="display:none">
        <tal:store repeat="item view/brain">
            <option value="${item/UID}">${item/Title}</option>
        </tal:store>
      </select>
    </p>
      <p>
        <input type="checkbox" name="on-door" id="on-door" class="shipping-method">
        宅配到府</p></td>
  </tr>
</tbody></table>
</li>

<li><table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody><tr>
    <th width="70" valign="top">取貨時間：</th>
    <td>
        <p>
            <input type="checkbox" name="morning" id="morning">
            <label for="checkbox2"></label>
            早上09:00-12:00
            <input type="checkbox" name="afternoon" id="afternoon">
            下午12:00-17:00
        </p>
    </td>
  </tr>
</tbody></table>
</li>

<li><table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody><tr>
    <th width="70" valign="top">訂購人：</th>
    <td width="60">姓　名</td>
    <td><input type="text" name="textfield7" id="textfield7" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>E-mail</td>
    <td><input type="text" name="textfield8" id="textfield8" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>聯絡電話</td>
    <td><input type="text" name="textfield9" id="textfield9" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>地　址</td>
    <td><select name="select6" id="select6">
      <option>請選擇郵遞區號</option>
    </select>
      <select name="select7" id="select7">
        <option>縣市</option>
      </select>
      <select name="select8" id="select8">
        <option>區域</option>
      </select></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><input type="text" name="textfield10" id="textfield10" style="width:100%"></td>
  </tr>
</tbody></table>
</li>
<li id="receiver-info" style="display:none"><table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody><tr>
    <th width="70" valign="top">收件人：</th>
    <td colspan="2"><label for="textfield7">
      <input name="checkbox5" type="checkbox" id="checkbox5">
      同訂購人資料　
      <input name="checkbox6" type="checkbox" id="checkbox6">
      加入常用通訊錄</label></td>
    </tr>
  <tr>
    <th width="70" valign="top">&nbsp;</th>
    <td width="60">姓　名</td>
    <td><input type="text" name="textfield11" id="textfield11" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>E-mail      </td>
    <td><input type="text" name="textfield8" id="textfield8" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>聯絡電話</td>
    <td><input type="text" name="textfield9" id="textfield9" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>地　址</td>
    <td><select name="select6" id="select6">
      <option>請選擇郵遞區號</option>
    </select>
      <select name="select7" id="select7">
        <option>縣市</option>
      </select>
      <select name="select8" id="select8">
        <option>區域</option>
      </select></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><input type="text" name="textfield10" id="textfield10" style="width:100%"></td>
  </tr>
</tbody></table>
</li>
<li><table width="100%" border="0" cellspacing="0" cellpadding="0">
  <tbody><tr>
    <th width="70" valign="top">發票資訊：</th>
    <td colspan="2"><label for="textfield7">
      <input name="checkbox5" type="checkbox" id="checkbox5">
      三聯式發票　
      <input name="checkbox6" type="checkbox" id="checkbox6">
      二聯式電子發票</label></td>
    </tr>
  <tr>
    <th width="70" valign="top">&nbsp;</th>
    <td width="60">發票統編</td>
    <td><input type="text" name="textfield11" id="textfield11" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>發票抬頭</td>
    <td><input type="text" name="textfield8" id="textfield8" style="width:100%"></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>寄送地址</td>
    <td><input name="checkbox7" type="checkbox" id="checkbox7">
同訂購人</td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><select name="select6" id="select6">
      <option>請選擇郵遞區號</option>
    </select>
      <select name="select7" id="select7">
        <option>縣市</option>
      </select>
      <select name="select8" id="select8">
        <option>區域</option>
      </select></td>
  </tr>
  <tr>
    <td>&nbsp;</td>
    <td>&nbsp;</td>
    <td><input type="text" name="textfield10" id="textfield10" style="width:100%"></td>
  </tr>
</tbody></table>
